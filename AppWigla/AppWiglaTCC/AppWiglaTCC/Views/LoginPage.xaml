<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppWiglaTCC.Views.LoginPage"
             Title=" ">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="0">

            <!-- Logo -->
            <Image Source="C:\Users\tsuyo\Documents\GitHub\ETEC\AppWigla\AppWiglaTCC\AppWiglaTCC\Resources\AppIcon\Wigla.png"
                   HeightRequest="150"
                   HorizontalOptions="Start"
                   Margin="0,0,0,0"
                   Aspect="AspectFit"/>

            <Label Text="Faça login para continuar"
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalOptions="Center"/>

            <!-- Formulário -->
            <VerticalStackLayout Spacing="15" Margin="0,30,0,0">

                <Entry x:Name="EmailEntry"
                       Placeholder="E-mail"
                       Keyboard="Email"
                       BackgroundColor="#f0f0f0"
                       TextColor="Black"
                       PlaceholderColor="Gray"
                       HeightRequest="50"
                       Margin="0,5"/>

                <Entry x:Name="SenhaEntry"
                       Placeholder="Senha"
                       IsPassword="True"
                       BackgroundColor="#f0f0f0"
                       TextColor="Black"
                       PlaceholderColor="Gray"
                       HeightRequest="50"
                       Margin="0,5"
                       Completed="OnSenhaCompleted"/>

                <!-- Botão de Login -->
                <Button Text="Entrar"
                        Clicked="Entrar_Clicked"
                        BackgroundColor="#0078D7"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        Margin="0,20,0,0"/>

                <!-- Linha divisória -->
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Margin="0,20,0,0">
                    <BoxView WidthRequest="80" HeightRequest="1" BackgroundColor="#ccc"/>
                    <Label Text="ou" TextColor="Gray" FontSize="13" VerticalOptions="Center"/>
                    <BoxView WidthRequest="80" HeightRequest="1" BackgroundColor="#ccc"/>
                </HorizontalStackLayout>

                <!-- Botão de Cadastro -->
                <Button Text="Cadastrar-se"
                        Clicked="Cadastrar_Clicked"
                        FontSize="14"
                        TextColor="#0078D7"
                        BackgroundColor="Transparent"
                        BorderColor="#0078D7"
                        BorderWidth="1"
                        CornerRadius="10"
                        HeightRequest="45"
                        Margin="0,10,0,40"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
