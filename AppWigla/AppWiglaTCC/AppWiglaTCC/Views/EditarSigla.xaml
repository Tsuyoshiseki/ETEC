<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppWiglaTCC.Views.EditarSigla"
             Title="{Binding Sigla}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Voltar" Clicked="Voltar_Clicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Label Text="Sigla:" FontAttributes="Bold" />
            <Frame BorderColor="Black" CornerRadius="8" Padding="5" HasShadow="False">
                <Entry x:Name="txt_sigla"
                       Placeholder="Digite a sigla"
                       BackgroundColor="Transparent"
                       TextColor="Black" />
            </Frame>

            <Label Text="Significado:" FontAttributes="Bold" />
            <Frame BorderColor="Black" CornerRadius="8" Padding="5" HasShadow="False">
                <Entry x:Name="txt_significado"
                       Placeholder="Digite o significado"
                       BackgroundColor="Transparent"
                       TextColor="Black" />
            </Frame>

            <Label Text="Descrição da Sigla:" FontAttributes="Bold" />
            <Frame BorderColor="Black" CornerRadius="8" Padding="5" HasShadow="False">
                <Editor x:Name="txt_descricao"
                        Placeholder="Digite a descrição"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        HeightRequest="80" />
            </Frame>

            <Label Text="Categoria:" FontAttributes="Bold" />
            <Frame BorderColor="Black" CornerRadius="8" Padding="5" HasShadow="False">
                <Picker x:Name="picker_categoria"
                        Title="Selecione a categoria"
                        BackgroundColor="Transparent"
                        TextColor="Black">
                    <Picker.Items>
                        <x:String>Gestão e Negócios</x:String>
                        <x:String>Desenvolvimento e Infraestrutura</x:String>
                        <x:String>Segurança e Acesso</x:String>
                        <x:String>Gerenciamento e Operação</x:String>
                        <x:String>Experiência do Usuário</x:String>
                    </Picker.Items>
                </Picker>
            </Frame>

            <Button Text="Editar"
                    Clicked="Editar_Clicked"
                    BackgroundColor="black"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="45"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
