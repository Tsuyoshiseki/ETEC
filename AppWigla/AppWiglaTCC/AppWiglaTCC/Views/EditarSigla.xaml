<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppWiglaTCC.Views.EditarSigla"
             Title="{Binding sigla}"
             BackgroundColor="White">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Voltar"
                     Clicked="Voltar_Clicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <!-- Botão Excluir (no topo, alinhado à direita) -->
            <HorizontalStackLayout HorizontalOptions="End">
                <Button Text="Excluir Sigla"
                        Clicked="Excluir_Clicked"
                        BackgroundColor="#D9534F"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="5"
                        FontAttributes="Bold"
                        Padding="10,0"
                        />
            </HorizontalStackLayout>

            <!-- Campo Sigla -->
            <Label Text="Sigla:"
                   TextColor="#0078D7"
                   FontAttributes="Bold" />
            <Frame CornerRadius="8" Padding="5" HasShadow="False" BorderColor="#E0E0E0">
                <Entry x:Name="txt_sigla"
                       Placeholder="Digite a sigla"
                       BackgroundColor="Transparent"
                       TextColor="Black" />
            </Frame>

            <!-- Campo Significado -->
            <Label Text="Significado:"
                   TextColor="#0078D7"
                   FontAttributes="Bold" />
            <Frame CornerRadius="8" Padding="5" HasShadow="False" BorderColor="#E0E0E0">
                <Entry x:Name="txt_significado"
                       Placeholder="Digite o significado"
                       BackgroundColor="Transparent"
                       TextColor="Black" />
            </Frame>

            <!-- Campo Descrição -->
            <Label Text="Descrição da Sigla:"
                   TextColor="#0078D7"
                   FontAttributes="Bold" />
            <Frame CornerRadius="8" Padding="5" HasShadow="False" BorderColor="#E0E0E0">
                <Editor x:Name="txt_descricao"
                        Placeholder="Digite a descrição"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        HeightRequest="100" />
            </Frame>

            <!-- Campo Categoria -->
            <Label Text="Categoria:"
                   TextColor="#0078D7"
                   FontAttributes="Bold" />
            <Frame CornerRadius="8" Padding="5" HasShadow="False" BorderColor="#E0E0E0">
                <Picker x:Name="picker_categoria"
                        Title="Selecione a categoria"
                        BackgroundColor="LightGray"
                        TextColor="Black">
                    <Picker.Items>
                        <x:String>Gestão e Negócios</x:String>
                        <x:String>Desenvolvimento e Infraestrutura</x:String>
                        <x:String>Segurança e Acesso</x:String>
                        <x:String>Gerenciamento e Operação</x:String>
                        <x:String>Experiência do Usuário</x:String>
                    </Picker.Items>
                </Picker>
            </Frame>

            <!-- Botão Editar -->
            <Button Text="Salvar Alterações"
                    Clicked="Editar_Clicked"
                    BackgroundColor="#0078D7"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="45"
                    FontAttributes="Bold"
                    Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
