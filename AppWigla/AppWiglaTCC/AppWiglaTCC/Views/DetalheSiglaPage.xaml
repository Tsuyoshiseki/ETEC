<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppWiglaTCC.Views.DetalheSiglaPage"
             Title="Detalhes da Sigla">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Voltar" Clicked="Voltar_Clicked" />
    </ContentPage.ToolbarItems>
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="{Binding Abreviacao}"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#0078D7"/>
            <Label Text="{Binding Significado}"
                   FontSize="18"
                   TextColor="Black"/>
            <Label Text="{Binding Categoria}"
                   FontSize="14"
                   TextColor="Gray"/>
            
            <!-- BotÃ£o Editar -->
            <Button Text="Editar"
                    BackgroundColor="#0078D7"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    HeightRequest="45"
                    WidthRequest="150"
                    HorizontalOptions="Center"
                    Margin="0,20,0,0"
                    Clicked="Editar_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
