<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="CadetBlue">

    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="{Binding QuartoSelecionado.Descricao}"
               TextColor="Black"
               FontSize="40"
               HorizontalTextAlignment="Center"
               FontAttributes="Bold">
            
            <Label.Shadow>
                <Shadow Brush="Black"
                    Offset="3,3"
                    Radius="5"
                    Opacity="0.1" />
            </Label.Shadow>
        </Label>
        
        <Frame Margin="10">
            <StackLayout  Orientation="Horizontal" >
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand"
                                       Spacing="10">
                    
                    <Label Text="Adultos: " 
                           FontAttributes="Bold"/>
                    <Label Text="{Binding QntAdultos}" 
                           TextColor="CadetBlue" />
                </HorizontalStackLayout>

                <HorizontalStackLayout HorizontalOptions="CenterAndExpand"
                                       Spacing="10">
                    <Label Text="CrianÃ§as: " 
                           FontAttributes="Bold"/>
                    <Label Text="{Binding QntCriancas}" 
                           TextColor="CadetBlue" />
                </HorizontalStackLayout>
            </StackLayout>
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in:" FontAttributes="Bold"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out:" FontAttributes="Bold"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia:" FontAttributes="Bold"/>

                <Label Grid.Row="1" Grid.Column="0" 
                       Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyyy}'}"
                       TextColor="{StaticResource Primary}" />

                <Label Grid.Row="1" Grid.Column="1" 
                       Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyyy}'}"
                       TextColor="{StaticResource Primary}" />

                <Label Grid.Row="1" Grid.Column="2" 
                       Text="{Binding Estadia}"
                       TextColor="{StaticResource Primary}" />
            </Grid>
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand"
                                   Spacing="5">
                <Label Text="Valor Total: " 
                       FontAttributes="Bold"/>
                <Label Text="{Binding ValorTotal, StringFormat='{}{0:c}'} "
                       TextColor="{StaticResource Primary}"/>
                
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Voltar"
                HorizontalOptions="Center"
                Clicked="Button_Clicked"
                BackgroundColor="WhiteSmoke"/>

    </VerticalStackLayout>
</ContentPage>